{
  "image": "elixir:latest",
  "cache": {
    "paths": [
      "_build/",
      "deps/"
    ]
  },
  "variables": {
    "MIX_ENV": "test",
  },
  "before_script": [
    "mix local.hex --force",
    "mix local.rebar --force",
    "mix deps.get",
    "mix deps.compile"
  ],
  "mix": {
    "stage": "test",
    "tags": ["elixir"],
    "script": [
      "mix test"
    ]
  },
  "credo": {
    "stage": "test",
    "tags": ["elixir"],
    "script": [
      "mix credo"
    ]
  }
}
